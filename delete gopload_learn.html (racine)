const NETWORKS = [
  { name: "TikTok", slug: "tiktok", icon: "üéµ" },
  { name: "YouTube Shorts", slug: "youtube-shorts", icon: "‚ñ∂Ô∏è" },
  { name: "X (Twitter)", slug: "x", icon: "ùïè" },
  { name: "Instagram Reels", slug: "instagram-reels", icon: "üì∏" },
  { name: "Facebook", slug: "facebook", icon: "f" },
  { name: "WhatsApp", slug: "whatsapp", icon: "üí¨" },
  { name: "Reddit", slug: "reddit", icon: "üëΩ" },
  { name: "WeChat", slug: "wechat", icon: "üü¢" },
  { name: "Douyin", slug: "douyin", icon: "üéµ" },
  { name: "Zhihu", slug: "zhihu", icon: "Áü•" },
