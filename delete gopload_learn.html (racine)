  { name: "Youku", slug: "youku", icon: "‰ºò" },
];
let selected = new Set(["tiktok","youtube-shorts","x"]);

function animateCount(id, to, duration=1200){
  const el=document.getElementById(id); const start=0; const t0=performance.now();
  function step(ts){ const p=Math.min(1,(ts-t0)/duration); el.textContent=Math.floor(start+(to-start)*p).toLocaleString(); if(p<1) requestAnimationFrame(step); }
  requestAnimationFrame(step);
}

const state = { create:false, analyze:false, optimize:false, monetize:false };
function complete(key){
  state[key]=true;
  const done = Object.values(state).filter(Boolean).length;
  const pct = Math.round((done/4)*100);
  document.getElementById('progress-bar').style.width = pct + '%';
  const card = document.querySelector(`[data-module="${key}"]`);
  if(card && !card.querySelector('.badge')){
    const b = document.createElement('div'); b.className='badge mt-3 inline-block text-xs px-2 py-1 rounded bg-emerald-500/20 border border-emerald-400/40 text-emerald-200'; b.textContent='‚úì Termin√©';
    card.appendChild(b);
  }
}

function renderPills(){
  const wrap = document.getElementById('networkPills'); wrap.innerHTML='';
  NETWORKS.forEach(n=>{
    const b=document.createElement('button'); b.className='pill '+(selected.has(n.slug)?'active':''); b.textContent=`${n.icon} ${n.name}`;
    b.onclick=()=>{ selected.has(n.slug)?selected.delete(n.slug):selected.add(n.slug); renderPills(); };
    wrap.appendChild(b);
  });
}
function simulate(){
  const base = 500 + Math.floor(Math.random()*1500);
  const mult = 1 + selected.size * 0.25;
  const views = Math.round(base*mult);
  const likes = Math.round(views * (0.12 + Math.random()*0.08));
  const comments = Math.round(views * (0.02 + Math.random()*0.02));
  document.getElementById('r-views').textContent = views.toLocaleString();
  document.getElementById('r-likes').textContent = likes.toLocaleString();
  document.getElementById('r-comments').textContent = comments.toLocaleString();
}
function resetDemo(){
  document.getElementById('demo-title').value=''; document.getElementById('demo-desc').value=''; document.getElementById('demo-tags').value='';
  document.getElementById('r-views').textContent='‚Äî'; document.getElementById('r-likes').textContent='‚Äî'; document.getElementById('r-comments').textContent='‚Äî';
  selected = new Set(["tiktok","youtube-shorts","x"]); renderPills();
}

const names = ["Sarah","Mehdi","Lea","Yan","Amira","Theo","Mina","Lucas","Omar","Zo√©"];
function rnd(arr){ return arr[Math.floor(Math.random()*arr.length)]; }
function addFeedItem(){
  const feed = document.getElementById('feed');
  const who = rnd(names);
  const actions = ["a termin√©","a d√©bloqu√©","a atteint","a publi√©", "a g√©n√©r√©"];
  const modules = ["Cr√©er un post","Analyser","Optimiser (IA)","Mon√©tiser"];
  const msg = `${who} ${rnd(actions)} ¬´ ${rnd(modules)} ¬ª`;
  const li = document.createElement('li'); li.className='glass rounded-xl px-4 py-3'; li.textContent=msg;
  feed.prepend(li);
  if(feed.children.length>8) feed.removeChild(feed.lastChild);
}

function renderBoard(){
  const board = document.getElementById('board'); board.innerHTML='';
  const top = Array.from({length:5}).map((_,i)=>({ name: rnd(names), score: Math.round(60+Math.random()*40) }))
    .sort((a,b)=>b.score-a.score);
  top.forEach((u,i)=>{
    const row = document.createElement('div'); row.innerHTML = `
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-full bg-white/10 grid place-items-center">${i+1}</div>
          <div class="font-medium">${u.name}</div>
        </div>
        <div class="text-sm">${u.score}%</div>
      </div>
      <div class="h-2 mt-2 rounded-full bg-white/10 overflow-hidden">
        <div class="h-full bg-gradient-to-r from-emerald-400 to-blue-500" style="width:${u.score}%"></div>
      </div>`;
    row.className='glass rounded-xl p-4';
    board.appendChild(row);
  });
}

function applyLang(lang){
  const t = I18N[lang];
  document.getElementById('t-hero-title').textContent=t.heroTitle;
  document.getElementById('t-hero-sub').textContent=t.heroSub;
  document.getElementById('t-hero-kpi1').textContent=t.heroKPI1;
  document.getElementById('t-hero-kpi2').textContent=t.heroKPI2;
  document.getElementById('t-hero-kpi3').textContent=t.heroKPI3;
  document.getElementById('t-cta-start').textContent=t.ctaStart;
  document.getElementById('t-cta-watch').textContent=t.ctaWatch;
  document.getElementById('t-modules-title').textContent=t.modulesTitle;
  document.getElementById('t-progress').textContent=t.progress;
  document.getElementById('t-m1').textContent=t.m1; document.getElementById('t-m1-desc').textContent=t.m1d;
  document.getElementById('t-m2').textContent=t.m2; document.getElementById('t-m2-desc').textContent=t.m2d;
  document.getElementById('t-m3').textContent=t.m3; document.getElementById('t-m3-desc').textContent=t.m3d;
  document.getElementById('t-m4').textContent=t.m4; document.getElementById('t-m4-desc').textContent=t.m4d;
  document.getElementById('t-start').textContent=t.start; document.getElementById('t-start2').textContent=t.start; document.getElementById('t-start3').textContent=t.start; document.getElementById('t-start4').textContent=t.start;
  document.getElementById('t-demo-title').textContent=t.demoTitle; document.getElementById('t-demo-desc').textContent=t.demoDesc; document.getElementById('t-demo-out').textContent=t.demoOut;
  document.getElementById('t-simulate').textContent=t.simulate; document.getElementById('t-reset').textContent=t.reset;
  document.getElementById('t-kpi-views').textContent=t.kViews; document.getElementById('t-kpi-likes').textContent=t.kLikes; document.getElementById('t-kpi-comments').textContent=t.kComments;
  document.getElementById('result-note').textContent=t.tip;
  document.getElementById('t-community').textContent=t.community; document.getElementById('t-live').textContent=t.live;
  document.getElementById('t-cta-title').textContent=t.ctaTitle; document.getElementById('t-cta-sub').textContent=t.ctaSub;
}

document.addEventListener('DOMContentLoaded', () => {
  renderPills();
  animateCount('counter-views', 128400); animateCount('counter-hours', 864); animateCount('counter-learners', 3270);
  addFeedItem(); renderBoard(); setInterval(addFeedItem, 2500); setInterval(renderBoard, 8000);
  const langSel=document.getElementById('lang'); langSel.value='fr'; applyLang('fr');
  langSel.addEventListener('change', e=>applyLang(e.target.value));
});
</script>
